FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    "(inlet|outlet|front|back)"
    {
        type            cyclic;
    }

    ground
    {
        type            fixedFluxPressure;
        value           uniform 0;
    }

    top
    {
        type            fixedValue;
        value           uniform 0;
    }
}


