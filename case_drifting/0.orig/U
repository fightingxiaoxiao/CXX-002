FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    "(inlet|outlet|front|back)"
    {
        type            cyclic;
    }

    ground
    {
        type            noSlip;
    }

    top
    {
        type            fixedShearStress;
        tau             (0.1225 0 0);
    }
}


