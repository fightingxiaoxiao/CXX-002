FoamFile
{
    version         2.0;
    format          ascii;
    class           dictionary;
    object          sampleDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

samples
{
    type                    sets;
    libs                    (sampling);
    setFormat               raw;
    interpolationScheme     cell;
    fields                  (U k epsilon nut omega);
    writeControl            writeTime;

    sets
    (
        x_0mPatch
        {
            type        face;
            axis        z;
            start       (0 0 0);
            end         (0 0 5);
        }

        x_0mCell
        {
            type        midPoint;
            axis        z;
            start       (5 0 0);
            end         (5 0 5);
        }
    );
}


