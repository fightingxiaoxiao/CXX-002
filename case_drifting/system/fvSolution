solvers
{
    p
    {
        //solver          PCG;
        //preconditioner  DIC;
        solver           GAMG;
        smoother         GaussSeidel;
        tolerance        1e-8;
        relTol           0.0001;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    "(U|k|epsilon|omega).*"
    {
        //solver          smoothSolver;
        solver          PBiCGStab;
        //smoother        GaussSeidel;
        preconditioner  DILU;
        tolerance       1e-06;
        relTol          0.0001;
    }

    kinematicCloud:alpha
    {
        solver                  GAMG;
        tolerance               1e-06;
        relTol                  0.001;
        smoother                GaussSeidel;
        cacheAgglomeration      true;
        nCellsInCoarsestLevel   10;
        agglomerator            faceAreaPair;
        mergeLevels             1;
    }
}


PIMPLE
{
    nNonOrthogonalCorrectors    0;
    nCorrectors                 3;
    nOuterCorrectors            2;
}


