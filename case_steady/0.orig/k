FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 1.3;    // (HW:Eq. 6)

boundaryField
{
    "(inlet|outlet)"
    {
        type            cyclic;
    }

    ground
    {
        type            kqRWallFunction;
        value           uniform 0.0;
    }

    top
    {
        type            zeroGradient;
    }

    sides
    {
        type            symmetry;
    }
}


