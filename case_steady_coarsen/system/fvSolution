FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver              PCG;
        preconditioner      DIC;
        tolerance           1e-8;
        relTol              0.0001;
    }

    "(U|k|epsilon|omega)"
    {
        solver              PBiCGStab;
        preconditioner      DILU;
        tolerance           1e-8;
        relTol              0.0001;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    consistent               true;
    pRefCell                 0;
    pRefValue                0;
}

relaxationFactors
{
    equations
    {
        p                       0.8;
        U                       0.9;
        "(k|epsilon|omega)"     0.9;
    }
}

cache
{
    grad(U);
}


