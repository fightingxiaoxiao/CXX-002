FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 -1 0 0 0 0];

internalField   uniform 0.0007;

boundaryField
{
    #include            "include/ABLConditions"

     "(inlet|outlet|front|back)"
    {
        type            cyclic;
    }

    ground
    {
        type            atmOmegaWallFunction;
        z0              $z0;
        Cmu             $Cmu;
        kappa           $kappa;
        value           $internalField;
    }

    top
    {
        type            zeroGradient;
    }

}


